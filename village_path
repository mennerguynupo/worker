def village_path():
    print("You arrive at a small village. The villagers seem wary of strangers.")
    print("1. Speak to the village elder.")
    print("2. Explore the village market.")
    choice = input("Enter 1 or 2: ")
    if choice == '1':
        print("The elder shares a secret map with you.")
    else:
        print("You find a mysterious potion at the market.")
